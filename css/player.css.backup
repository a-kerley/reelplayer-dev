/* ========================================
   WAVEFORM CANVAS
   ======================================== */
/* Base state - let JS or expandable mode CSS control visibility */
#waveform > canvas {
  transition: opacity 0.4s ease;
}

/* Only set initial hidden state for non-expandable mode */
.player-wrapper:not(.expandable-mode) #waveform > canvas {
  opacity: 0;
}

/* ========================================
   PLAY/PAUSE BUTTON
   ======================================== */
#playPause {
  color: #888888;
  transition: opacity 0.4s ease, color 0.4s ease, transform 0.2s ease;
  display: inline-flex;
}

/* Only set initial hidden state for non-expandable mode */
.player-wrapper:not(.expandable-mode) #playPause {
  opacity: 0;
}

#playPause:hover {
  transform: scale(1.1);
}

/* ========================================
   VOLUME CONTROL
   ======================================== */
.volume-control {
  opacity: 0.5;
  color: #888888;
  transition: opacity 0.4s ease, color 0.4s ease;
  display: inline-flex;
  position: relative;
  align-items: center;
  justify-content: center;
  height: 100%;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
}

/* Volume slider show state */
.volume-control.show-slider #volumeSlider {
  opacity: 1;
  transform: rotate(-90deg) translateX(-50%) scaleX(1);
  pointer-events: auto;
}

/* Volume toggle animation when slider shows */
.volume-control.show-slider #volumeToggle {
  transform: translateY(10px) translateZ(0); /* Moves down by same amount when slider appears */
}

/* Volume toggle icon */
#volumeToggle {
  transition: transform 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  will-change: transform;
  backface-visibility: hidden;
  -webkit-backface-visibility: hidden;
  transform: translateY(-2px) translateZ(0); /* Initial position - ADJUST THIS to move icon up/down */
}
#volumeToggle .heroicon {
  width: 32px;
  height: 32px;
}

/* Volume slider */
#volumeSlider {
  opacity: 0;
  transform: rotate(-90deg) translateX(-50%) scaleX(0);
  transform-origin: left center;
  transition: opacity 0.25s ease, transform 0.25s cubic-bezier(0.4, 0, 0.2, 1);
  -webkit-appearance: none;
  appearance: none;
  width: 80px; /* Slider length */
  height: 11px; /* Slider thickness */
  position: absolute;
  bottom: 100%;
  left: 50%;
  margin-bottom: 0.2rem; /* Gap between icon and slider */
  background: transparent;
  border-radius: 4px;
  outline: none;
  cursor: pointer;
  pointer-events: none;
  will-change: transform, opacity;
  backface-visibility: hidden;
}

/* Volume slider track (WebKit browsers: Chrome, Safari, Edge) */
#volumeSlider::-webkit-slider-runnable-track {
  width: 100%;
  height: 6px; /* Track height */
  background: var(--waveform-unplayed);
  border-radius: 4px;
  border: none;
}

/* Volume slider thumb (WebKit browsers) */
#volumeSlider::-webkit-slider-thumb {
  -webkit-appearance: none;
  appearance: none;
  width: 15px; /* Thumb size */
  height: 15px;
  border-radius: 50%;
  background: var(--ui-accent);
  border: none;
  cursor: pointer;
  margin-top: -0.22rem; /* Center thumb on track */
}

/* ========================================
   WAVEFORM CONTAINER
   ======================================== */
#waveform {
  position: relative;
  overflow: visible;
  flex: 1;
  width: 100%;
  max-width: none;
}
.waveform-and-volume {
  display: flex;
  align-items: center;
  gap: 0.5rem;
  flex-grow: 1;
  height: 85px; /* Waveform height */
}
.hover-overlay {
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  background-color: var(--waveform-hover);
  pointer-events: none;
  width: 0;
  z-index: 4;
}
.hover-time {
  position: absolute;
  bottom: -1.5rem;
  left: 0;
  color: var(--ui-accent);
  font-size: 0.75rem;
  font-weight: 400;
  padding: 0 0.3rem;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.2s ease;
  white-space: nowrap;
  z-index: 10;
  transform: translateX(-50%);
}
.playhead-time {
  position: absolute;
  bottom: -1.5rem;
  left: 0;
  color: var(--ui-accent);
  font-size: 0.75rem;
  font-weight: 400;
  padding: 0 0.5rem;
  pointer-events: none;
  white-space: nowrap;
  z-index: 10;
  opacity: 0;
  transition: opacity 0.2s ease;
  transform: translateX(-50%);
}
.total-time {
  position: absolute;
  bottom: 60%;
  right: 0.3rem;
  color: var(--waveform-unplayed);
  font-size: 0.65rem;
  font-weight: 200;
  pointer-events: none;
  user-select: none;
  white-space: nowrap;
  z-index: 10;
  opacity: 0;
  transition: opacity 0.4s ease;
}
.total-time.visible {
  opacity: 1;
}
.hidden {
  opacity: 0;
  pointer-events: none;
  transition: opacity 0.3s ease;
  display: block !important;
}
button {
  padding: 0.5rem 1rem;
  font-size: 1rem;
  border: none;
  background: var(--ui-accent);
  color: #fff;
  cursor: pointer;
}
.icon-button {
  background: none;
  border: none;
  font-size: 2rem;
  cursor: pointer;
  padding: 0;
  color: var(--ui-accent);
  display: flex;
  align-items: center;
  justify-content: center;
  height: 100%;
}
.icon-button svg {
  transition: opacity 0.2s ease;
}
.track-info {
  display: block;
  min-height: 1.2rem;
  opacity: 0;
  visibility: hidden;
  transition: opacity 0.4s ease, visibility 0.4s ease;
  margin-bottom: 0.75rem;
  margin-left: 3.7rem;
  padding-left: 0.5rem;
  font-size: 0.9rem;
  font-weight: 600;
  color: var(--ui-accent);
  font-style: normal;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.track-info.visible {
  opacity: 1;
  visibility: visible;
}
.player-wrapper {
  position: relative;
  max-width: 100%;
  margin: 0 auto;
  text-align: left;
  min-height: 120px;
  display: flex;
  flex-direction: column;
  background-image: var(--background-image);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-blend-mode: var(--background-blend-mode);
  background-color: var(--background-color, rgba(255, 255, 255, var(--background-opacity)));
  border-radius: 8px;
  overflow: hidden;
  padding: var(--player-padding);
}

/* Static mode specific height - don't apply to expandable mode */
.player-wrapper:not(.expandable-mode) {
  height: var(--player-height, auto);
  max-height: var(--player-height, none);
}

/* Create a background layer that can be blurred */
.player-wrapper::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-image: var(--background-image);
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  background-color: rgba(255, 255, 255, var(--background-opacity));
  z-index: 0;
  border-radius: 8px;
}

/* Backdrop filter overlay for blur effect */
.player-wrapper::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: var(--overlay-color);
  backdrop-filter: blur(var(--background-blur));
  -webkit-backdrop-filter: blur(var(--background-blur));
  pointer-events: none;
  z-index: 1;
  border-radius: 8px;
}

.player-wrapper > * {
  position: relative;
  z-index: 2;
}

.loading {
  position: absolute;
  top: 0;
  left: 0;
  z-index: 10;
  background: rgba(255, 255, 255, 0.9);
  width: 100%;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 8px;
}

.loading dotlottie-player {
  /* Apply color overlay to match UI accent color */
  filter: 
    brightness(0) /* Make it black first */
    saturate(100%) 
    brightness(var(--lottie-brightness, 1)) 
    sepia(1) 
    hue-rotate(var(--lottie-hue-rotation, 0deg)) 
    saturate(var(--lottie-saturation, 1));
  transition: filter 0.3s ease;
}

/* Remove old dot animation styles */

.heroicon {
  width: 46px;
  height: 46px;
  padding-top: 0.2rem;
}

.reel-title {
  text-align: var(--reel-title-align, center);
  font-size: var(--reel-title-size, 1.3rem);
  font-weight: var(--reel-title-weight, 700);
  margin-bottom: var(--reel-title-padding-bottom, 0.8rem);
  color: var(--ui-accent);
}

/* Add extra padding at the top when reel title is hidden */
.player-wrapper.no-title .player-content {
  padding-top: 3rem;
}